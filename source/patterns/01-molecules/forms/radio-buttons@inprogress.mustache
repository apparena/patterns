{{# radioButtons }}
    <div class="radioButtons {{ class }}">
        {{# items }}
            <div class="form-check">
                <div class="radio {{ status }}">
                    <label class="form-check-label">
                        {{> atoms-radio-button }}
                        {{ label }}
                    </label>
                </div>
            </div>
        {{/ items }}
    </div>
{{/radioButtons}}