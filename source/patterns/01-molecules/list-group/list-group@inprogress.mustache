{{# listGroup }}
    <ul class="list-group">
        {{# items }}
            <li class="list-group-item {{# status}}{{ status }}{{/status}}">

                {{# header }}
                    <h4 class="list-group-item-heading">{{{ header }}}</h4>
                {{/ header }}

                <p class="list-group-item-text">{{{ text }}}</p>

                {{# tag }}{{> atoms-tag }}{{/ tag }}
            </li>
        {{/ items }}
    </ul>
{{/listGroup}}