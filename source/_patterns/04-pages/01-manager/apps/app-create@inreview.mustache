{{% BLOCKS }}
{{< templates-focused-task }}

{{$ contentBlock }}
<div class="card">
    {{# header }}
        <div class="card-header">
            {{{ header }}}
        </div>
    {{/header}}

    {{# content }}
        {{#progressTracker}}
            {{> molecules-progress-tracker }}
        {{/progressTracker}}
        <div class="card-block">
            {{#customer}}
                {{> molecules-form-group }}
            {{/customer}}
            {{#template}}
                {{> molecules-form-group }}
            {{/template}}
            {{#appName}}
                {{> molecules-form-group }}
            {{/appName}}
        </div>
    {{/ content }}

    {{# footer }}
        <div class="card-footer text-xs-right">
            {{{ footer }}}
        </div>
    {{/footer}}
</div>
{{/ contentBlock }}

{{/ templates-focused-task }}

