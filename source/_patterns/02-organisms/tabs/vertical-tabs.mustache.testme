{{#vertical-tabs}}
    <div class="o-vertical-tabs">

        <div class="row">
            {{# navigation.positionLeft }}
                <div class="col-md-5">
                    <div class="row">
                        <div class="offset-md-1 col-md-11">
                            <ul class="list-unstyled">
                                {{#items}}
                                    <li class="media {{#isActive}}active{{/isActive}} mb-4" data-toggle="tab" href="#{{id}}" role="tab">
                                        <!--<img class="d-flex mr-3" src="..." alt="Generic placeholder image">-->
                                        <div class="icon">
                                            {{{ icon }}}
                                        </div>
                                        <div class="media-body">
                                            <h5 class="mt-0 mb-1">{{{title}}}</h5>
                                            {{{description}}}
                                        </div>
                                    </li>
                                {{/items}}

                                {{#cta}}
                                    <li>
                                        <a href="{{url}}" class="btn {{class}}">{{{text}}}</a>
                                    </li>
                                {{/cta}}
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-7">
                    <div class="row">
                        <div class="col-md-11">
                            <!-- Tab panes -->
                            <div class="tab-content">
                                {{#items}}
                                    <div class="tab-pane {{#isActive}}active{{/isActive}}" id="{{id}}" role="tabpanel">
                                        {{{content}}}
                                    </div>
                                {{/items}}
                            </div>
                        </div>
                    </div>
                </div>
            {{/navigation.positionLeft}}
            {{^ navigation.positionLeft }}
