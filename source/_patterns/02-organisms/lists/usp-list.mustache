{{#usp-list}}
    <div class="o-usp-list {{class}} text-center">
            <div class="row">
                {{#items}}
                    <div class="col-md-6 col-lg-3 py-4 py-lg-0">
                        {{> 01-molecules/website/usp }}
                    </div>
                {{/items}}
            </div>
    </div>
    <script type="application/javascript">
        jQuery(function () {
            jQuery('.o-usp-list').each(function(){
                if (!jQuery(this).data('o-usp-list-initialized')) {
                    jQuery(this).find('.m-usp .m-usp-icon').matchHeight();
                    jQuery(this).find('.m-usp .m-usp-title').matchHeight();
                    jQuery(this).find('.m-usp .m-usp-description').matchHeight();
                    jQuery(this).data('o-usp-list-initialized', true);
                }
            });
        });
    </script>
{{/usp-list}}