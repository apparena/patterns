<footer class="o-footer text-xs-center" role="contentinfo">

    <div class="container">
        {{# footer.logo }}
            <a class="o-footer-logo text-center mt-1 mb-5" href="{{url}}">
                {{> 00-atoms/logo/logo }}
            </a>
        {{/footer.logo}}

        <hr/>

        <div class="o-footer-nav-top row">
            {{#footer.navigation.primary}}
                <div class="o-footer-nav-primary col-md-9 text-sm-left">
                    {{> 02-organisms/navigation/nav-footer }}
                </div>
            {{/footer.navigation.primary}}

            {{#footer.socialMedia}}
                <div class="o-footer-social-media col-md-3 text-sm-right">
                    <ul class="list-inline">
                        {{#items}}
                            <li class="list-inline-item">
                                <a href="{{url}}" target="_blank">
                                    {{{icon}}}
                                </a>
                            </li>
                        {{/items}}
                    </ul>
                </div>
            {{/footer.socialMedia}}
        </div>

        <div class="o-footer-nav-bottom text-center text-muted">
            {{#footer.navigation.secondary}}
                <div class="o-footer-nav-secondary">
                    {{> 02-organisms/navigation/nav-footer }}
                </div>
            {{/footer.navigation.secondary}}

            {{#footer.copyright}}
                <div class="o-footer-copyright">
                    Copyright &copy; {{ year }} {{ company.name }}â„¢ | Made with <i class="aa-icon aa-icon-heart text-danger"></i> in Cologne, Germany.
                </div>
            {{/footer.copyright}}
        </div>

    </div>

</footer><!-- end o-footer -->
