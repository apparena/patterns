{{# slider }}
    <link rel="stylesheet" href="https://kenwheeler.github.io/slick/slick/slick.css">
    <link rel="stylesheet" href="https://kenwheeler.github.io/slick/slick/slick-theme.css">
    <div class="o-slider m-l-3 m-r-3" id="{{id}}">
        {{# items }}
            <div>{{{content}}}</div>
        {{/ items }}
    </div>
    <script type="application/javascript" src="https://kenwheeler.github.io/slick/slick/slick.js"></script>
    <script>
        $(document).ready(function () {
            $('#{{id}}').slick({
                {{#settings.dots}}dots: true,{{/settings.dots}}
                {{#settings.slidesToScroll}}slidesToScroll: {{settings.slidesToScroll}},{{/settings.slidesToScroll}}
                {{#settings.slidesToShow}}slidesToShow: {{settings.slidesToShow}},{{/settings.slidesToShow}}
                {{#settings.autoplay}}autoplay: false,{{/settings.autoplay}}
                {{#settings.autoplaySpeed}}autoplaySpeed: {{settings.autoplaySpeed}},{{/settings.autoplaySpeed}}
                infinite: true
            });
        });
    </script>
{{/slider}}