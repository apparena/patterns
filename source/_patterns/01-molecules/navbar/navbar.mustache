{{#navbar}}
    <div class="m-navbar">
        <nav id="m-navbar-desktop" class="m-navbar-desktop {{class }}">
            <div class="container">
                <a class="navbar-brand" href="{{logo.url}}">
                    {{> 00-atoms/logo/logo }}
                </a>

                {{# searchForm }}
                    <div class="search-form">
                        <div class="search-form-handle">
                            {{{icon}}}
                        </div>
                        {{> 01-molecules/navbar/navbar-form }}
                    </div>
                {{/searchForm}}

                <div class="text-right hidden-md-down cd-morph-dropdown">
                    {{#navs}}
                        <ul class="main-nav navbar-nav {{ class }}">
                            {{# items }}
                                <li class="nav-item">
                                    <a class="nav-link {{# isActive }}active{{/ isActive }} {{# isDisabled }}disabled{{/ isDisabled }} {{# subnav }}has-dropdown gallery{{/ subnav }} {{ class }}"
                                       href="{{ url }}" {{# subnav }} data-content="subnav-{{ID}}"{{/ subnav }}>
                                        {{{ text }}}
                                        {{# subnav }}<i class="aa-icon aa-icon-chevron-o-down"></i>{{/ subnav }}
                                    </a>
                                </li>
                            {{/ items }}
                        </ul>
                        <!-- Very special subnav for navbars -->
                        <div class="morph-dropdown-wrapper">
                            <div class="dropdown-list">
                                <ul>
                                    {{# items }}
                                        <li id="subnav-{{ID}}" class="dropdown gallery">
                                            <div class="content">
                                                <a href="{{ url }}" class="label">
                                                    <h4>{{{ text }}}</h4>
                                                </a>
                                                {{# subnav }}
                                                    <div class="content-container">
                                                        {{#columns}}
                                                            <ul class="row">
                                                                {{#items}}
                                                                    <li class="col-6">
                                                                        <a class="link-container" href="{{url}}">
                                                                            {{#icon}}
                                                                                <i class="nav-icon aa-icon aa-icon-fw aa-icon-{{icon}}"></i>
                                                                            {{/icon}}
                                                                            <div class="product-link-content">
                                                                            <span class="link-title">
                                                                                {{text}}</span>
                                                                                <p class="link-sub hidden-sm-down">{{description}}</p>
                                                                            </div>
                                                                        </a>
                                                                    </li>
                                                                {{/items}}
                                                            </ul>
                                                        {{/columns}}
                                                    </div>
                                                {{/subnav}}
                                            </div>
                                        </li>
                                    {{/ items }}
                                </ul>
                            </div>
                        </div>
                    {{/navs}}
                </div>
                {{#actions}}
                    <div class="navbar-actions">
                        {{#items}}
                            {{> 00-atoms/navbar/action }}
                        {{/items}}
                    </div>
                {{/actions}}
            </div>
        </nav>
    </div>

    <!-- Mobile navigation -->
    <nav id="m-navbar-mobile" class="m-navbar-mobile">
        {{#navs}}
            <ul>
                {{# items }}
                    <li class="">
                        {{# url }}
                            <a class="{{# isActive }}active{{/ isActive }} {{# isDisabled }}disabled{{/ isDisabled }}"
                               href="{{ url }}">
                                {{{ text }}}
                            </a>
                        {{/ url}}
                        {{^ url }}
                            <span class="{{# isActive }}active{{/ isActive }} {{# isDisabled }}disabled{{/ isDisabled }}">
                                {{{ text }}}
                            </span>
                        {{/ url }}
                        {{# subnav }}
                            <ul>
                                {{#columns}}
                                    {{#items}}
                                        <li>
                                            <a href="{{url}}">{{text}}</a>
                                        </li>
                                    {{/items}}
                                {{/columns}}
                            </ul>
                        {{/subnav}}
                    </li>
                {{/ items }}
            </ul>
        {{/navs}}
    </nav>


    <script type="application/javascript">
        $(document).ready(function () {
            if (!$("#m-navbar-mobile").data('mmenu')) {
                var options = {},
                        configuration = {};
                if ($("#main")) {
                    configuration['offCanvas'] = {
                        pageSelector: "#main"
                    }
                }
                var mmenu = $('#m-navbar-mobile').mmenu(options, configuration);
                $('.m-navbar-mobile-toggle').each(function () {
                    $(this).on('click', function (e) {
                        e.preventDefault();
                        $("#m-navbar-mobile").data('mmenu').open();
                    });
                });
            }
        });
    </script>
{{/navbar}}
