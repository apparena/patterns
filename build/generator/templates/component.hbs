{{#if exampleFileName}}
import Example from "apparena-patterns-react/patterns/{{ patternDir }}/docs/{{ exampleFileName }}";
import ExampleSrc from "!raw-loader!apparena-patterns-react/patterns/{{ patternDir }}/docs/{{ exampleFileName }}";
{{/if}}
{{#if propsFileName}}
import InfoJson from "./info.json";
{{/if}}
{{#if mdFileName}}
import DescriptionContent from "!raw-loader!apparena-patterns-react/patterns/{{ patternDir }}/docs/{{ mdFileName }}";
