export default class {{ componentClassName }}Component extends ReactComponent {
    render() {
        return (
            <div>
                {{#if mdFileName}}
                <Card>
                    <div type="card-header">
                        {{componentClassName}}
                    </div>
                    <div type="card-body">
                        {DescriptionContent}
                        {{!--<Description description={DescriptionContent} />--}}
                    </div>
                </Card>
                {{/if}}
                {{#if exampleFileName}}
                    <Card>
                        <div type="card-header">
                            Examples
                        </div>
                        <div type="card-body">
                            <Example/>
                            {{!--<ExampleContainer code={ExampleSrc}>
                                <Example/>
                            </ExampleContainer>--}}
                        </div>
                    </Card>
                {{/if}}
                {{#if propsFileName}}
                    <Card>
                        <div type="card-header">
                            Props
                        </div>
                        <div type="card-body">
                            {InfoJson}
                            {{!--<PropsContainer infos={InfoJson}/>--}}
                        </div>
                    </Card>
                {{/if}}
