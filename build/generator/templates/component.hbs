import React from "react";
import PropTypes from "prop-types";
import {ReactComponent, Card} from "apparena-patterns-react";
import Description from "include/description";
import ExampleContainer from "include/example-container";
import PropsContainer from "include/props-container";
import TestResult from "include/test-result";
{{#if exampleFileName}}
import Example from "./docs/{{ exampleFileName }}";
import ExampleSrc from "!raw-loader!./docs/{{ exampleFileName }}";
{{/if}}
{{#if propsFileName}}
import InfoJson from "./docs/info.json";
{{/if}}
{{#if mdFileName}}
import DescriptionContent from "!raw-loader!./docs/{{ mdFileName }}";
{{/if}}

export default class {{ componentClassName }}Component extends ReactComponent {
    render() {
        return (
            <div>
                {{#if mdFileName}}
                <Card>
                    <div type="card-header">
                        {{componentClassName}}
                    </div>
                    <div type="card-body">
                        <Description description={DescriptionContent} />
                    </div>
                </Card>
                {{/if}}
                {{#if exampleFileName}}
                    <Card>
                        <div type="card-header">
                            Examples
                        </div>
                        <div type="card-body">
                            <ExampleContainer code={ExampleSrc}>
                                <Example/>
                            </ExampleContainer>
                        </div>
                    </Card>
                {{/if}}
                {{#if propsFileName}}
                    <Card>
                        <div type="card-header">
                            Props
                        </div>
                        <div type="card-body">
                            <PropsContainer infos={InfoJson}/>
                        </div>
                    </Card>
                {{/if}}
            </div>
        );
    }
}